# ================================================
# OFFENSIVE AI - CYBERSECURITY AWARENESS PLATFORM
# Environment Variables Configuration
# ================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_TITLE=Offensive AI - Cybersecurity Awareness Platform
API_VERSION=1.0.0
API_DESCRIPTION=Enterprise cybersecurity awareness and red-team training simulator

# Database
# For development (SQLite)
DATABASE_URL=sqlite:///./offensive_ai.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/offensive_ai

# For MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/offensive_ai

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=INFO

# ================================================
# OPTIONAL: Speech-to-Text Configuration
# ================================================

# Google Cloud Speech-to-Text
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# AWS Transcribe
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# AWS_REGION=us-east-1

# Azure Speech Services
# AZURE_SPEECH_KEY=your_key
# AZURE_SPEECH_REGION=eastus

# OpenAI Whisper API
# OPENAI_API_KEY=sk-...

# ================================================
# Optional: Email Configuration (for notifications)
# ================================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=your_email@gmail.com

# ================================================
# Optional: Monitoring & Analytics
# ================================================
# SENTRY_DSN=https://...
# DATADOG_API_KEY=...
